.toc-list {
  ul {
    padding: 0;
    margin: 0;
    list-style-type: none;
  }

  li + li {
    margin-top: var(--spacing-extra-small);
  }

  a:link,
  a:visited {
    font-weight: 600;
    color: var(--eggplant);
    text-decoration: none;
    border-bottom: 3px solid var(--transparent);
    padding-bottom: 1px;
  }

  a:hover {
    color: var(--dragonfruit-light);
    border-bottom-color: var(--dragonfruit-light);
  }
}
